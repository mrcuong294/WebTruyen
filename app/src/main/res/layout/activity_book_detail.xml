<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context="com.nguyencuong.webtruyen.ui.activity.bookdetail.BookDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin">

            <ImageView
                android:id="@+id/mdetails_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_48"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back_24dp"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/bookdetail_btn_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bookdetail_btn_favorite"
                android:layout_toStartOf="@+id/bookdetail_btn_favorite"
                android:padding="@dimen/space_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_bookmark"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/bookdetail_btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bookdetail_btn_share"
                android:layout_toStartOf="@+id/bookdetail_btn_share"
                android:padding="@dimen/space_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_widget_slider_btn_favorite"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/bookdetail_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_48"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/space_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_share_24dp"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/mdetails_img_cover_play"
            android:layout_width="@dimen/space_56"
            android:layout_height="@dimen/space_56"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_widget_slider_top_view"
            android:tint="@color/text_light_1"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/bookdetail_img_poster"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/book_layout_info"
            android:scaleType="centerCrop"
            android:src="@drawable/default_poster"
            android:alpha="0.5"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/book_tv_name"
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:paddingTop="@dimen/space_48"
            android:paddingBottom="@dimen/space_8"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:background="@drawable/ds_widget_home_block_item_title_bg"
            android:textColor="@color/text_light_1"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Phàm nhân tu tiên"/>

        <TextView
            android:id="@+id/book_tv_author"
            style="@style/AppTheme.Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_tv_name"
            android:layout_marginTop="@dimen/space_24"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/transparent_dark"
            android:textColor="@color/text_light_1"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="@string/sample_text_book_author" />

        <TextView
            android:id="@+id/book_tv_chapter"
            style="@style/AppTheme.Text.Body.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:layout_below="@+id/book_tv_name"
            android:background="@color/transparent_dark"
            android:textColor="@color/text_light_1"
            tools:text="1250/2000 chương, cập nhật lúc 12:00 12/04" />

        <LinearLayout
            android:id="@+id/book_layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_tv_name"
            android:orientation="vertical">

        </LinearLayout>

        <FrameLayout
            android:id="@+id/mdetails_layout_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_80"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/mdetails_tv_error"
                style="@style/AppTheme.Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableBottom="@drawable/ic_refresh"
                android:drawablePadding="@dimen/space_16"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:orientation="vertical"
                android:padding="@dimen/space_24"
                android:textColor="@color/text_light_1"
                tools:text="@string/error_msg_no_data" />

        </FrameLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
