<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nguyencuong.webtruyen.screen.home.HomeFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/home_img_search"
                android:layout_width="@dimen/space_48"
                android:layout_height="@dimen/space_48"
                android:layout_gravity="center_vertical|right|end"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search"
                android:contentDescription="search icon" />

            <TextView
                android:id="@+id/textView"
                style="@style/AppTheme.Text.Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/space_16"
                android:paddingRight="@dimen/space_16"
                android:text="@string/app_name" />

        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/home_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/home_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_cover"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|bottom">

                    <View
                        android:layout_width="@dimen/space_8"
                        android:layout_height="@dimen/space_8"
                        android:layout_margin="@dimen/space_4"
                        android:background="@drawable/ds_widget_slider_pager_bg"/>

                    <View
                        android:layout_width="@dimen/space_8"
                        android:layout_height="@dimen/space_8"
                        android:layout_margin="@dimen/space_4"
                        android:background="@drawable/ds_widget_slider_pager_bg_actived"/>

                    <View
                        android:layout_width="@dimen/space_8"
                        android:layout_height="@dimen/space_8"
                        android:layout_margin="@dimen/space_4"
                        android:background="@drawable/ds_widget_slider_pager_bg"/>

                    <View
                        android:layout_width="@dimen/space_8"
                        android:layout_height="@dimen/space_8"
                        android:layout_margin="@dimen/space_4"
                        android:background="@drawable/ds_widget_slider_pager_bg"/>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/include_text_error"/>

</android.support.design.widget.CoordinatorLayout>
